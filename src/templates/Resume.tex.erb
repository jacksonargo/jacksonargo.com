%%% Custom sectioning (sectsty package)
%%% ------------------------------------------------------------
\usepackage{sectsty}

\sectionfont{%			            % Change font of \section command
	\usefont{OT1}{phv}{b}{n}%		% bch-b-n: CharterBT-Bold font
	\sectionrule{0pt}{0pt}{-5pt}{3pt}}

%%% Macros
%%% ------------------------------------------------------------
\newlength{\spacebox}
\settowidth{\spacebox}{8888888888}			% Box to align text
\newcommand{\sepspace}{\vspace*{1em}}		% Vertical space macro

\newcommand{\MyName}[1]{ % Name
		\huge \usefont{OT1}{phv}{b}{n} \hfill #1
		\par \normalsize \normalfont}
		
\newcommand{\MySlogan}[1]{ % Slogan (optional)
		\large \usefont{OT1}{phv}{m}{n}\hfill \textit{#1}
		\par \normalsize \normalfont}

\newcommand{\NewPart}[1]{\section*{\uppercase{#1}}}

\newcommand{\PersonalEntry}[2]{
		\noindent\hangindent=2em\hangafter=0 % Indentation
		\parbox{\spacebox}{        % Box to align text
		\textit{#1}}		       % Entry name (birth, address, etc.)
		\hspace{1.5em} #2 \par}    % Entry value

\newcommand{\SkillsEntry}[2]{      % Same as \PersonalEntry
		\noindent\hangindent=2em\hangafter=0 % Indentation
		\parbox{\spacebox}{        % Box to align text
		\textit{#1}}			   % Entry name (birth, address, etc.)
		\hspace{1.5em} #2 \par}    % Entry value	
		
\newcommand{\EducationEntry}[4]{
		\noindent \textbf{#1}{ \hfill
			\parbox{10em}{%
			\raggedleft{}#2}} \par  % Duration
		\noindent \textit{#3} \par        % School
		\noindent\hangindent=2em\hangafter=0 \small #4 % Description
		\normalsize \par}

\newcommand{\ShortEntry}[3]{
		\noindent \textbf{#1} \hfill      % Study
		{%
			\parbox{10em}{%
			\hfill #2}} \par  % Duration
		\noindent\hangindent=2em\hangafter=0 \small #3 % Description
		\normalsize \par}
        
\newcommand{\ListEntry}[2]{
		\noindent \textbf{#1}      % Study
		#2 % Description
		}

\begin{document}
\MyName{Alexander Jackson Argo}
\MySlogan{jackson@jacksonargo.com}

\NewPart{Work experience}{}

<%- @resume.select{|k| k["type"] == "rackspace"}.each do |x| -%>
\EducationEntry{<%= x["title"] %>}{<%= x["date"] %>}{<%= x["employer"] %>}{
<%- unless x["description"].nil? -%> <%= x["description"] %> <%- end -%>
<%- unless x["items"].nil? -%>
\begin{itemize}
 <%- x["items"].each do |i| -%>
 \item <%= i %>
 <%- end -%>
\end{itemize}
<%- end -%>
}
<%- end -%>

\clearpage

<%- @resume.select{|k| k["type"] == "work"}.each do |x| -%>
\EducationEntry{<%= x["title"] %>}{<%= x["date"] %>}{<%= x["employer"] %>}{<%= x["description"] %>}
<%- end -%>

\NewPart{Education}{}

<%- @resume.select{|k| k["type"] == "education"}.each do |x| -%>
\EducationEntry{<%= x["school"] %>}{<%= x["date"] %>}{<%= x["major"] %>}{<%= x["description"] %>}
<%- end -%>

\NewPart{Projects}{}

<%- @resume.select{|k| k["type"] == "projects"}.each do |x| -%>
\ShortEntry{<%= x["title"] %>}{<%= x["date"] %>}{<%= x["description"] %>}
<%- end -%>

\NewPart{Awards and Honors}{}

<%- @resume.select{|k| k["type"] == "awards"}.each do |x| -%>
\EducationEntry{<%= x["title"] %>}{<%= x["date"] %>}{<%= x["employer"] %>}{<%= x["description"] %>}
<%- end -%>

\clearpage

\NewPart{Skills}{}

\begin{multicols}{2}
<%- @resume.select{|k| k["type"] == "skills"}.each do |x| -%>
\ListEntry{<%= x["title"] %>}
{
\begin{itemize}
<%- x["items"].each do |i| -%>
\item <%= i %>
<%- end -%>
\end{itemize}
}

<%- end -%>
\end{multicols}

\end{document}
